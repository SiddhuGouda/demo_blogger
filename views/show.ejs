 <% include ./partials/header %>

        <!-- Section: Magazine v.1 -->
        <section class="magazine-section my-5 container">
          <!-- Section heading -->
          <h2 class="h1-responsive font-weight-bold text-center my-5"><%= blog.title %></h2>
         

          <!-- Grid row -->
          <div class="row">

            <!-- Grid column -->
            <div class="col-md-12">

              <!-- Featured news -->
              <div class="single-news mb-4">

                <!-- Image -->
                <div class="view overlay rounded z-depth-1-half mb-4">
                  <img class="img-fluid" src="<%= blog.image %>" alt="Sample image">
                  <a>
                    <div class="mask rgba-white-slight"></div>
                  </a>
                </div>

                <!-- Data -->
                <div class="news-data d-flex justify-content-between">
                  <a href="#!" class="light-blue-text"><h6 class="font-weight-bold"><i class="fa fa-plane pr-2"></i>Food</h6></a>
                  <p class="font-weight-bold dark-grey-text"><i class="fa fa-clock-o pr-2"></i><%= blog.created %></p>
                </div>

                <!-- Excerpt -->
                <h3 class="font-weight-bold dark-grey-text mb-3"><a><%= blog.title %></a></h3>
                <p class="dark-grey-text"><%= blog.body %></p>

              </div>
              <!-- Featured news -->
              </div>
              </section>


 <% include ./partials/footer %>
